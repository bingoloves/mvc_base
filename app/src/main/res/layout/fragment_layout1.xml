<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.learn.base.layout.NavigationBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:nav_bar_title="首页"
        app:nav_bar_bg="@color/colorPrimary"/>


    <Button
        android:id="@+id/moveQiNiu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="跳转七牛"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp">
        <Button
            android:id="@+id/choose_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="选择图片"/>
        <Button
            android:id="@+id/take_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="选择图片"/>
        <Button
            android:id="@+id/pre_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="预览图片"/>
        <ImageView
            android:id="@+id/avatar_iv"
            android:layout_marginLeft="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerInside"
            android:src="@mipmap/logo2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/succeed_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成功" />
        <Button
            android:id="@+id/net_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无网络" />
        <Button
            android:id="@+id/loading_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中" />
        <Button
            android:id="@+id/data_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无数据" />
    </LinearLayout>
    <com.learn.multistate.MultistateLayout
        android:id="@+id/multistate_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是内容"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"/>
    </com.learn.multistate.MultistateLayout>
</LinearLayout>